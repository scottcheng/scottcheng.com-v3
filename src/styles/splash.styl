@import './variables'

#splash
  .links
    .link
      transition color .25s
      &.px
        font-size .9em
      &.email
        font-size .85em
      &.github:hover
        color #333
      &.dribbble:hover
        color #ea4c89
      &.instagram:hover
        color #3f729b
      &.px:hover
        color #000
      &.spotify:hover
        color #2ebd59
      &.twitter:hover
        color #55acee
      &.email:hover
        color #db4437
      .icon
        display inline-block

  // Size-specific styles
  // max-width: 399px
  padding margin-xxl 0 margin-lg

  .about, .links
    margin-top margin-xl

  .name
    font-size font-size-lg

  .links
    font-size font-size-ms
    .icon
      width 40px

  @media screen and (min-width: 721px)
    padding-top margin-xxl * 2

    .name
      font-size font-size-xl

    .links
      font-size font-size-md
      .icon
        width 60px
