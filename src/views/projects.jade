each p in projects
  .project(class=p.id)
    .container
      .text
        .type= p.type
        .name
          a(href=p.link)= p.name
        .description!= p.description
      .image
        a(href=p.link)
          if p.browser
            .browser
              .browser-header
                .dots
                  .dot
                  .dot
                  .dot
              .browser-window
                img.in-browser(src='/assets/projects/#{p.id}.png')
          else
            img.no-browser(src='/assets/projects/#{p.id}.png')
